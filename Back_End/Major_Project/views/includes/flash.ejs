<style>
    /* flush animation -------------------------------------------------------------------------------------  */
        .anima{
            position: absolute;
            top: calc(5.5rem );
            animation: slide-in 3s ease-in forwards;
            z-index: 20;
        }
        @keyframes slide-in {
            0% {
                top: calc(5.5rem - 90px);
            }
            25%{
                top: 5.5rem;
            }
            75%{
                top: 5.5rem;
            }
            100%{
                top: calc(5.5rem - 190px);
            }
        }
    </style>
    <!-- add on boilerplate -->
    <% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-8 offset-2 anima" role="alert">
        <b><%= success %></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    
    <% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2 anima" role="alert">
        <b><%= error %></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>    
    
