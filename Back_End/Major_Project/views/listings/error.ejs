<% layout("/layouts/boilerplate") %>
<div class="row" style="height: calc(100vh - 14.5rem);">
  <img src="/Icon/error-img.jpg" alt="error" style="height: 90%; object-fit: scale-down; margin-bottom: 20px;">
    <div class="alert  col-10 offset-1 mt-3" role="alert" style="text-align: center; position: relative; top: -60px;">
      <% if(message.split(" ")[1] == "duplicate"){ %>
        <p class="alert-heading" style="margin: 0px;"><b><%= message.split(" ")[7].toUpperCase() %> &nbsp;duplicate</b></p>
        <p class="alert-heading"><b>Please use another <%= message.split(" ")[11] %>- </b></p>
      <% }else{ %>
        <p class="alert-heading"><b><%= message %></b></p>          
      <% } %>
      <!-- <form action="/listings">
        <button class="btn btn-outline-success">Home</button>
      </form> -->
    </div>
</div>