<% layout("/layouts/boilerplate") %>    <!-- is layout use karne se html ka set custome boilerplate milta h -->
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- comment create new listing button this is use on navbar -->
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
        <% for (const listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <div class="card-img">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" />
                    </div>
                    <!-- <div class="card-img-overlay">xyz</div> -->
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>            
        <% } %>
    </div>

    
</body>
